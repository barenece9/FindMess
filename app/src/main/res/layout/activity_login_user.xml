<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context="com.lnsel.findmess.activity.LoginActivity">


    <include layout="@layout/header"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">


    <ImageView
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_marginBottom="5dp"
        android:src="@drawable/ic_account_circle_black_24dp"/>


    <EditText
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:hint="email id"
        android:id="@+id/etn_user"
        android:textColor="@color/primary_text"
        android:paddingLeft="10dp"
        android:layout_marginLeft="5dp"
        android:background="@drawable/ractangle_box"
        android:drawableLeft="@drawable/ic_person_black_24dp"
        android:drawablePadding="3dp"
        android:layout_marginBottom="10dp"
        android:text="b"/>

    <EditText
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:hint="password"
        android:id="@+id/etn_password"
        android:textColor="@color/primary_text"
        android:paddingLeft="10dp"
        android:layout_marginLeft="5dp"
        android:drawableLeft="@drawable/ic_lock_black_24dp"
        android:drawablePadding="3dp"
        android:background="@drawable/ractangle_box"
        android:layout_marginBottom="20dp"
        android:text="1"/>

    <Button
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:textColor="@color/icons"
        android:id="@+id/btn_login"
        android:gravity="center"
        android:text="LOGIN"
        android:layout_marginBottom="10dp"
        android:background="@color/accent"/>

    <TextView
        android:layout_width="300dp"
        android:gravity="center_vertical"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:textSize="16sp"
        android:textColor="#d32f2f"
        android:text="@string/forgot_password"/>

    <TextView
        android:layout_width="300dp"
        android:gravity="center_vertical"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:textSize="16sp"
        android:id="@+id/user_registetion"
        android:layout_marginTop="5dp"
        android:textColor="@color/primary"
        android:text="@string/new_user_reg"/>

    </LinearLayout>

</LinearLayout>
